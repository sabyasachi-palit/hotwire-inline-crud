
<tr id="<%= dom_id product %>">
  <td class="name-email"><%= product.name %></td>
  <td class="name-email"><%= product.description %></td>
  <td  class="action">
    <%= link_to "Edit", edit_product_path(product), class: "mr2", data: { turbo_frame: :product_form } %>
    <%= button_to "Delete", product, method: :delete, class: "btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
  </td>
</tr>
